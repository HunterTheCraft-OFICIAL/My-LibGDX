name: LibGDX Multi-Platform Build

on:
  workflow_dispatch:   # execu√ß√£o manual

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # 1Ô∏è‚É£ Checkout do reposit√≥rio
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2Ô∏è‚É£ Configura√ß√£o do JDK (compat√≠vel com Gradle 6 e AGP 4.1.3)
      - name: Set up JDK 11
        uses: actions/setup-java@v4
        with:
          java-version: '11'
          distribution: 'temurin'

      # 3Ô∏è‚É£ Cache Gradle para acelerar builds
      - name: Cache Gradle packages
        uses: actions/cache@v4
        with:
          path: ~/.gradle/caches
          key: ${{ runner.os }}-gradle-${{ hashFiles('**/*.gradle*', '**/gradle-wrapper.properties') }}
          restore-keys: |
            ${{ runner.os }}-gradle-

      # 4Ô∏è‚É£ Permiss√£o de execu√ß√£o para gradlew
      - name: Grant execute permission for gradlew
        run: chmod +x gradlew

      # 5Ô∏è‚É£ Compilar todos os m√≥dulos
      - name: Build all modules
        run: ./gradlew build --stacktrace

      # 6Ô∏è‚É£ Artefato Desktop (JAR)
      - name: Upload desktop artifact
        uses: actions/upload-artifact@v4
        with:
          name: MyGdx-Desktop
          path: desktop/build/libs/*.jar

      # 7Ô∏è‚É£ Artefato Android (APK)
      - name: Upload android artifact
        uses: actions/upload-artifact@v4
        with:
          name: MyGdx-Android
          path: android/build/outputs/apk/debug/*.apk

      # 8Ô∏è‚É£ Artefato HTML (WAR/Dist)
      - name: Upload html artifact
        uses: actions/upload-artifact@v4
        with:
          name: MyGdx-HTML
          path: html/build/**

      # 9Ô∏è‚É£ Artefato iOS (RoboVM build)
      - name: Upload ios artifact
        uses: actions/upload-artifact@v4
        with:
          name: MyGdx-iOS
          path: ios/build/**

      # üîü Compactar projeto p√≥s-build (com libs baixadas)
      - name: Create compact project zip
        run: zip -r MyGdx-Project.zip . -x "*.git*"

      - name: Upload compact project artifact
        uses: actions/upload-artifact@v4
        with:
          name: MyGdx-Project-Zip
          path: MyGdx-Project.zip