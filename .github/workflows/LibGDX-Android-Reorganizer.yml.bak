name: LibGDX â€“ Workflow 2 (Reorganiza Backends + Nativos)

on:
  workflow_run:
    workflows:
      - LibGDX â€“ Build completo e artefato filtrÃ¡vel
    types:
      - completed

permissions:
  actions: read
  contents: read

jobs:
  reorganize:
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Download LibGDX artifact from Workflow 1
        uses: actions/download-artifact@v4
        with:
          run-id: ${{ github.event.workflow_run.id }}
          name: libgdx-1.14.0          # ðŸ”¥ OBRIGATÃ“RIO
          path: input-artifacts

      - name: Debug received artifacts
        run: |
          echo "ðŸ“¦ Artefatos recebidos:"
          ls -R input-artifacts

      - name: Normalize structure
        run: |
          mkdir -p output
          cp -r input-artifacts/* output/

      - name: Upload reorganized artifact
        uses: actions/upload-artifact@v4
        with:
          name: libgdx-reorganized
          path: output