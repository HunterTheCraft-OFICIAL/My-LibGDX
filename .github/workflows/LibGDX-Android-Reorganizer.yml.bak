name: LibGDX ‚Äì Workflow 2 (Reorganiza Backends + Nativos)

on:
  workflow_run:
    workflows:
      - LibGDX ‚Äì Build completo e artefato filtr√°vel
    types:
      - completed

jobs:
  reorganize:
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    runs-on: ubuntu-latest

    steps:
      # 1Ô∏è‚É£ Checkout (somente para versionamento / logs)
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2Ô∏è‚É£ Download do artefato GERADO pelo Workflow 1
      - name: Download LibGDX artifact from previous workflow
        uses: actions/download-artifact@v4
        with:
          name: libgdx-1.14.0
          run-id: ${{ github.event.workflow_run.id }}
          path: input-artifact

      # 3Ô∏è‚É£ Debug ‚Äî confirmar estrutura recebida
      - name: Debug artifact structure
        run: |
          echo "üì¶ Estrutura recebida do Workflow 1:"
          ls -R input-artifact || true

      # 4Ô∏è‚É£ Preparar nova estrutura reorganizada
      - name: Prepare reorganized structure
        run: |
          mkdir -p output/{backends,natives,extensions,tools,core}

          # Core
          if [ -d "input-artifact/libgdx" ]; then
            cp -r input-artifact/libgdx/* output/ || true
          fi

          # Backends
          if [ -d "output/backends" ]; then
            echo "‚úî Backends detectados"
          fi

          # Natives
          if [ -d "output/natives" ]; then
            echo "‚úî Natives detectados"
          fi

          # Extensions
          if [ -d "output/extensions" ]; then
            echo "‚úî Extensions detectadas"
          fi

          # Tools
          if [ -d "output/tools" ]; then
            echo "‚úî Tools detectadas"
          fi

      # 5Ô∏è‚É£ Debug ‚Äî validar estrutura final
      - name: Debug final structure
        run: |
          echo "üìÇ Estrutura FINAL reorganizada:"
          ls -R output || true

      # 6Ô∏è‚É£ Upload do artefato reorganizado (EXTRA / DEBUG)
      - name: Upload reorganized LibGDX artifact
        uses: actions/upload-artifact@v4
        with:
          name: libgdx-1.14.0-reorganized
          path: output