name: LibGDX ‚Äì Workflow 2 (Reorganiza Backends + Nativos)

on:
  workflow_run:
    workflows:
      - LibGDX ‚Äì Build completo e artefato filtr√°vel
    types:
      - completed

permissions:
  actions: read   # üîë ESSENCIAL
  contents: read

jobs:
  reorganize:
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Download artifacts from previous workflow
        uses: actions/download-artifact@v4
        with:
          run-id: ${{ github.event.workflow_run.id }}
          path: input-artifacts

      - name: Debug received artifacts
        run: |
          echo "üì¶ Artefatos recebidos:"
          ls -R input-artifacts || true

          if [ ! -d "input-artifacts" ]; then
            echo "‚ùå Nenhum artefato encontrado"
            exit 1
          fi

      - name: Normalize LibGDX structure
        run: |
          mkdir -p output
          for ART in input-artifacts/*; do
            echo "‚û° Processando $ART"
            cp -r "$ART"/* output/ || true
          done

      - name: Upload reorganized artifact
        uses: actions/upload-artifact@v4
        with:
          name: libgdx-reorganized
          path: output