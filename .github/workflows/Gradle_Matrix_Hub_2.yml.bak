name: Gradle Wrapper Multi-Version

on:
  workflow_dispatch:

permissions:
  contents: read

jobs:
  update-wrapper:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        raiz: [Raíz-v6, Raíz-v7, Raíz-v8, Raíz-v9]
        gradle-version: [6.9.4, 7.6.3, 8.10.2, 9.0]
      fail-fast: false  # continua mesmo se uma versão falhar

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Temurin JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: '17'

      - name: Generate Gradle Wrapper
        working-directory: ${{ matrix.raiz }}
        run: gradle wrapper --gradle-version=${{ matrix.gradle-version }} --distribution-type=bin

      - name: Grant execute permission for Gradlew
        working-directory: ${{ matrix.raiz }}
        run: chmod +x gradlew

      - name: Upload Wrapper Artifacts
        if: success()  # só sobe se deu certo
        uses: actions/upload-artifact@v4
        with:
          name: ${{ matrix.raiz }}-wrapper-${{ matrix.gradle-version }}
          path: |
            ${{ matrix.raiz }}/gradlew
            ${{ matrix.raiz }}/gradlew.bat
            ${{ matrix.raiz }}/gradle/wrapper/gradle-wrapper.jar
            ${{ matrix.raiz }}/gradle/wrapper/gradle-wrapper.properties
            ${{ matrix.raiz }}/build.gradle
            ${{ matrix.raiz }}/gradle.properties
            ${{ matrix.raiz }}/settings.gradle
          retention-days: 30

  consolidate:
    runs-on: ubuntu-latest
    needs: update-wrapper
    steps:
      - name: Download all artifacts
        uses: actions/download-artifact@v4
        with:
          path: all-wrappers

      - name: Upload consolidated artifact
        if: always()  # sempre tenta consolidar
        uses: actions/upload-artifact@v4
        with:
          name: consolidated-wrappers
          path: all-wrappers
          retention-days: 30