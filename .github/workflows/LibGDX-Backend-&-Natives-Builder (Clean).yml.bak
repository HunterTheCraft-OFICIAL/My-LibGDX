name: LibGDX Backend & Natives Builder (Final)

on:
  workflow_dispatch:
  push:
    branches: [ "main" ]

jobs:
  build-libgdx:
    runs-on: ubuntu-latest

    env:
      LIBGDX_VERSION: 1.14.0

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Java
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: 17

      - name: Restore Gradle cache
        uses: actions/cache@v4
        with:
          path: |
            ~/.gradle/caches
            ~/.gradle/wrapper
          key: gradle-libgdx-${{ env.LIBGDX_VERSION }}
          restore-keys: |
            gradle-libgdx-

      - name: Clone libGDX official source
        run: |
          git clone --depth 1 --branch $LIBGDX_VERSION https://github.com/libgdx/libgdx.git libgdx-src

      - name: Build libGDX (core + backends + natives)
        working-directory: libgdx-src
        run: |
          ./gradlew clean
          ./gradlew publishToMavenLocal

      - name: Prepare libgdx-pronto structure
        run: |
          mkdir -p libgdx-pronto/core

          mkdir -p libgdx-pronto/desktop/natives/windows
          mkdir -p libgdx-pronto/desktop/natives/linux
          mkdir -p libgdx-pronto/desktop/natives/macos

          mkdir -p libgdx-pronto/android/libs
          mkdir -p libgdx-pronto/android/jniLibs/armeabi-v7a
          mkdir -p libgdx-pronto/android/jniLibs/arm64-v8a
          mkdir -p libgdx-pronto/android/jniLibs/x86
          mkdir -p libgdx-pronto/android/jniLibs/x86_64

      - name: Copy core jars
        run: |
          cp ~/.m2/repository/com/badlogicgames/gdx/gdx/${LIBGDX_VERSION}/gdx-${LIBGDX_VERSION}.jar \
             libgdx-pronto/core/

          cp ~/.m2/repository/com/badlogicgames/gdx/gdx/${LIBGDX_VERSION}/gdx-${LIBGDX_VERSION}-sources.jar \
             libgdx-pronto/core/

      - name: Copy desktop backend
        run: |
          cp ~/.m2/repository/com/badlogicgames/gdx/gdx-backend-lwjgl3/${LIBGDX_VERSION}/gdx-backend-lwjgl3-${LIBGDX_VERSION}.jar \
             libgdx-pronto/desktop/

          cp ~/.m2/repository/com/badlogicgames/gdx/gdx-backend-lwjgl3/${LIBGDX_VERSION}/gdx-backend-lwjgl3-${LIBGDX_VERSION}-sources.jar \
             libgdx-pronto/desktop/

      - name: Copy desktop natives
        run: |
          cp ~/.m2/repository/com/badlogicgames/gdx/gdx-platform/${LIBGDX_VERSION}/gdx-platform-${LIBGDX_VERSION}-natives-desktop.jar \
             libgdx-pronto/desktop/natives/

      - name: Copy Android backend
        run: |
          cp ~/.m2/repository/com/badlogicgames/gdx/gdx-backend-android/${LIBGDX_VERSION}/gdx-backend-android-${LIBGDX_VERSION}.jar \
             libgdx-pronto/android/libs/

      - name: Extract Android natives (.so)
        run: |
          unzip -o ~/.m2/repository/com/badlogicgames/gdx/gdx-platform/${LIBGDX_VERSION}/gdx-platform-${LIBGDX_VERSION}-natives-armeabi-v7a.jar \
            -d libgdx-pronto/android/jniLibs/armeabi-v7a

          unzip -o ~/.m2/repository/com/badlogicgames/gdx/gdx-platform/${LIBGDX_VERSION}/gdx-platform-${LIBGDX_VERSION}-natives-arm64-v8a.jar \
            -d libgdx-pronto/android/jniLibs/arm64-v8a

          unzip -o ~/.m2/repository/com/badlogicgames/gdx/gdx-platform/${LIBGDX_VERSION}/gdx-platform-${LIBGDX_VERSION}-natives-x86.jar \
            -d libgdx-pronto/android/jniLibs/x86

          unzip -o ~/.m2/repository/com/badlogicgames/gdx/gdx-platform/${LIBGDX_VERSION}/gdx-platform-${LIBGDX_VERSION}-natives-x86_64.jar \
            -d libgdx-pronto/android/jniLibs/x86_64

      - name: Generate README
        run: |
          cat <<EOF > libgdx-pronto/README.txt
          libgdx-pronto
          =================

          Estrutura organizada manualmente a partir do libGDX oficial.
          Todos os arquivos foram compilados localmente a partir do c√≥digo-fonte oficial.

          Core:
          - gdx.jar
          - gdx-sources.jar

          Desktop:
          - backend LWJGL3
          - natives desktop

          Android:
          - backend Android
          - natives por arquitetura (jniLibs)

          Uso:
          - Copiar manualmente para projetos
          - Ou consumir em outro workflow automatizado
          EOF

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: libgdx-pronto-${{ env.LIBGDX_VERSION }}
          path: libgdx-pronto