name: LibGDX Dependency Hunter

on:
  workflow_dispatch:

jobs:
  hunt-dependency:
    runs-on: ubuntu-latest

    steps:
      # 1Ô∏è‚É£ Checkout
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2Ô∏è‚É£ JDK compat√≠vel
      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'

      # 3Ô∏è‚É£ Cache Gradle
      - name: Cache Gradle packages
        uses: actions/cache@v4
        with:
          path: |
            ~/.gradle/caches
            ~/.gradle/wrapper
          key: ${{ runner.os }}-gradle-${{ hashFiles('**/*.gradle*', '**/gradle-wrapper.properties') }}
          restore-keys: |
            ${{ runner.os }}-gradle-

      # 4Ô∏è‚É£ Permiss√£o gradlew
      - name: Grant execute permission for gradlew
        run: chmod +x gradlew

      # 5Ô∏è‚É£ Rodar √°rvore de depend√™ncias
      - name: Generate dependency tree
        run: |
    ./gradlew buildEnvironment > build-env.txt 2>&1
    ./gradlew dependencyInsight --dependency commons-compress > dependency-insight.txt 2>&1 || true

      # 6Ô∏è‚É£ Resumo no painel
      - name: Summarize dependency hunt
        run: |
          echo "## üîé Commons-Compress Dependency Hunt" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          if grep -q "commons-compress" dependency-insight.txt; then
            echo "‚ùå Encontrado uso de **commons-compress**:" >> $GITHUB_STEP_SUMMARY
            grep "commons-compress" dependency-insight.txt | head -20 >> $GITHUB_STEP_SUMMARY
            echo "" >> $GITHUB_STEP_SUMMARY
            echo "### üí° Sugest√µes:" >> $GITHUB_STEP_SUMMARY
            echo "- Identifique qual lib est√° puxando a vers√£o antiga." >> $GITHUB_STEP_SUMMARY
            echo "- Use \`exclude\` ou \`dependencySubstitution\` para for√ßar a vers√£o correta." >> $GITHUB_STEP_SUMMARY
          else
            echo "‚úÖ Nenhum uso de commons-compress detectado." >> $GITHUB_STEP_SUMMARY
          fi

      # 7Ô∏è‚É£ Upload dos artefatos
      - name: Upload dependency artifacts
        uses: actions/upload-artifact@v4
        with:
          name: Dependency-Hunt-Results
          path: |
            dependencies-tree.txt
            dependency-insight.txt