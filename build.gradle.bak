allprojects {
    apply plugin: "eclipse"

    version = '1.0'
    ext {
        appName = "StressTest"
        gdxVersion = '1.10.0'
        roboVMVersion = '2.3.12'
        box2DLightsVersion = '1.5'
        ashleyVersion = '1.7.3'
        aiVersion = '1.8.2'
        gsonVersion = '2.8.6'
        adsVersion = '17.2.1'
        gdxControllersVersion = '2.1.0'
        gdxPayVersion = '1.3.1'
        libgdxCommonVersion = '0.0.5'
    }

    repositories {
        mavenLocal()
        mavenCentral()
        google()
        gradlePluginPortal()
        maven { url "https://oss.sonatype.org/content/repositories/snapshots/" }
        maven { url "https://oss.sonatype.org/content/repositories/releases/" }
    }

}

// Tentativa antiga de for√ßar commons-compress (removida)

project(":android") {
    apply plugin: "com.android.application"

    // ‚úÖ Configura√ß√£o obrigat√≥ria no Android Gradle Plugin 8.x
    android {
        compileSdkVersion 35   // ajuste para a vers√£o que voc√™ est√° usando

        defaultConfig {
            applicationId "com.hunterthecraft.stresstest"  // ajuste para o seu package real
            minSdkVersion 26
            targetSdkVersion 35
            versionCode 1
            versionName "1.0"
        }

        namespace "com.hunterthecraft.stresstest"  // ‚úÖ campo exigido pelo AGP
    }

    // ‚úÖ Configura√ß√£o para nativos
    configurations { natives }

    dependencies {
        // Core compartilhado
        implementation project(":core")

        // Backend Android
        api "com.badlogicgames.gdx:gdx-backend-android:$gdxVersion"

        // Nativos LibGDX
        natives "com.badlogicgames.gdx:gdx-platform:$gdxVersion:natives-armeabi-v7a"
        natives "com.badlogicgames.gdx:gdx-platform:$gdxVersion:natives-arm64-v8a"
        natives "com.badlogicgames.gdx:gdx-platform:$gdxVersion:natives-x86"
        natives "com.badlogicgames.gdx:gdx-platform:$gdxVersion:natives-x86_64"

        // Box2D
        api "com.badlogicgames.gdx:gdx-box2d:$gdxVersion"
        natives "com.badlogicgames.gdx:gdx-box2d-platform:$gdxVersion:natives-armeabi-v7a"
        natives "com.badlogicgames.gdx:gdx-box2d-platform:$gdxVersion:natives-arm64-v8a"
        natives "com.badlogicgames.gdx:gdx-box2d-platform:$gdxVersion:natives-x86"
        natives "com.badlogicgames.gdx:gdx-box2d-platform:$gdxVersion:natives-x86_64"

        // FreeType
        api "com.badlogicgames.gdx:gdx-freetype:$gdxVersion"
        natives "com.badlogicgames.gdx:gdx-freetype-platform:$gdxVersion:natives-armeabi-v7a"
        natives "com.badlogicgames.gdx:gdx-freetype-platform:$gdxVersion:natives-arm64-v8a"
        natives "com.badlogicgames.gdx:gdx-freetype-platform:$gdxVersion:natives-x86"
        natives "com.badlogicgames.gdx:gdx-freetype-platform:$gdxVersion:natives-x86_64"

        // Ashley ECS
        api "com.badlogicgames.ashley:ashley:$ashleyVersion"

        // AI
        api "com.badlogicgames.gdx:gdx-ai:$aiVersion"

        // Controllers
        api "com.badlogicgames.gdx-controllers:gdx-controllers-android:$gdxControllersVersion"

        // Google Ads
        implementation "com.google.android.gms:play-services-ads:$adsVersion"

        // GDX Pay
        implementation "com.badlogicgames.gdxpay:gdx-pay-android-googlebilling:$gdxPayVersion"
    }
}

project(":core") {
    apply plugin: "java-library"

    dependencies {
        api "com.badlogicgames.gdx:gdx:$gdxVersion"
        api "com.badlogicgames.gdx:gdx-box2d:$gdxVersion"
        api "com.badlogicgames.gdx:gdx-freetype:$gdxVersion"
        api "com.badlogicgames.ashley:ashley:$ashleyVersion"
        api "com.badlogicgames.gdx:gdx-ai:$aiVersion"
        api "com.badlogicgames.gdx-controllers:gdx-controllers-core:$gdxControllersVersion"
        implementation "com.google.code.gson:gson:$gsonVersion"
        implementation "com.badlogicgames.gdxpay:gdx-pay-client:$gdxPayVersion"
        implementation "com.github.kendaozinho:libgdx-common:$libgdxCommonVersion"
    }
}
