// ./android/build.gradle [Gradle v8.11.1]

plugins {
    id 'com.android.application'
}

android {
    namespace "com.mygdx.game"
    compileSdkVersion 35

    sourceSets {
        main {
            manifest.srcFile 'AndroidManifest.xml'
            java.srcDirs = ['src']
            aidl.srcDirs = ['src']
            renderscript.srcDirs = ['src']
            res.srcDirs = ['res']
            assets.srcDirs = ['assets']
            jniLibs.srcDirs = ['src/jniLibs']
        }
    }

    defaultConfig {
        applicationId "com.mygdx.game"
        minSdkVersion 26
        targetSdkVersion 35
        versionCode 1
        versionName "0.0.1"
    }

    buildTypes {
        debug {
            minifyEnabled false
            shrinkResources false
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
        }
        release {
            minifyEnabled true
            shrinkResources true
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
        }
    }

    compileOptions {
        sourceCompatibility = JavaVersion.VERSION_17
        targetCompatibility = JavaVersion.VERSION_17
    }
}

// ✅ Task para copiar nativos
tasks.register("copyAndroidNatives") {
    inputs.files(configurations.natives)
    outputs.dir("src/jniLibs/arm64-v8a")
    outputs.dir("src/jniLibs/armeabi-v7a")
    outputs.dir("src/jniLibs/x86_64")
    outputs.dir("src/jniLibs/x86")

    doFirst {
        file("src/jniLibs/arm64-v8a/").mkdirs()
        file("src/jniLibs/armeabi-v7a/").mkdirs()
        file("src/jniLibs/x86_64/").mkdirs()
        file("src/jniLibs/x86/").mkdirs()
    }

    configurations.natives.copy().files.each { jar ->
        def outputDir = null
        if (jar.name.endsWith("natives-arm64-v8a.jar")) outputDir = file("src/jniLibs/arm64-v8a")
        if (jar.name.endsWith("natives-armeabi-v7a.jar")) outputDir = file("src/jniLibs/armeabi-v7a")
        if (jar.name.endsWith("natives-x86_64.jar")) outputDir = file("src/jniLibs/x86_64")
        if (jar.name.endsWith("natives-x86.jar")) outputDir = file("src/jniLibs/x86")

        if (outputDir != null) {
            copy {
                from zipTree(jar)
                into outputDir
                include "*.so"
                duplicatesStrategy = DuplicatesStrategy.EXCLUDE
            }
        }
    }
}

// ✅ Task para copiar backend Android jar para libs/
tasks.register("copyBackendJar") {
    doLast {
        def backend = configurations.compileClasspath.resolvedConfiguration.resolvedArtifacts.find {
            it.moduleVersion.id.group == "com.badlogicgames.gdx" && it.name == "gdx-backend-android"
        }?.file
        if (backend) {
            copy {
                from backend
                into "libs"
            }
        }
    }
}

// ✅ Garantir ordem correta das tasks
tasks.withType(com.android.build.gradle.tasks.PackageApplication).configureEach {
    dependsOn(tasks.named("copyAndroidNatives"))
}
tasks.withType(JavaCompile).configureEach {
    dependsOn(tasks.named("copyAndroidNatives"))
}

eclipse.project.name = appName + "-android"